---
apiVersion: kuttl.dev/v1beta1
kind: TestStep
metadata:
  name: install-druid
timeout: 600
---
apiVersion: secrets.stackable.tech/v1alpha1
kind: SecretClass
metadata:
  name: druid-with-ldap-bind
spec:
  backend:
    k8sSearch:
      searchNamespace:
        pod: {}
---
apiVersion: authentication.stackable.tech/v1alpha1
kind: AuthenticationClass
metadata:
  name: druid-ldap-authentication-class
spec:
  provider:
    ldap:
      hostname: openldap.default.svc.cluster.local
      searchBase: ou=Users,dc=example,dc=org
      searchFilter: (&(uid=%s)(objectClass=inetOrgPerson))
      bindCredentials:
        secretClass: druid-with-ldap-bind
        port: 1389
#{% if test_scenario['values']['ldap-use-tls'] == 'false' %}
#      port: 1389
#{% else %}
#      port: 1636
#      tls:
#        verification:
#          server:
#            caCert:
#              secretClass: openldap-tls
#{% endif %}
---
apiVersion: v1
kind: Secret
metadata:
  name: druid-with-ldap-bind
  labels:
    secrets.stackable.tech/class: druid-with-ldap-bind
stringData:
  bindUser: uid=admin,ou=Users,dc=example,dc=org
  bindPassword: admin
  internalUser: druid_system
  internalPassword: druidsystem
---
apiVersion: druid.stackable.tech/v1alpha1
kind: DruidCluster
metadata:
  name: derby-druid
spec:
  version: {{ test_scenario['values']['druid'] }}
  clusterConfig:
    authentication:
      ldap: druid-tls-auth-class
    deepStorage:
      hdfs:
        configMapName: druid-hdfs
        directory: /druid
    metadataStorageDatabase:
      dbType: derby
      connString: jdbc:derby://localhost:1527/var/druid/metadata.db;create=true
      host: localhost
      port: 1527
    tls: null
    zookeeperConfigMapName: druid-znode
  brokers:
    roleGroups:
      default:
        replicas: 1
  coordinators:
    roleGroups:
      default:
        replicas: 1
  historicals:
    roleGroups:
      default:
        replicas: 1
  middleManagers:
    roleGroups:
      default:
        replicas: 1
  routers:
    roleGroups:
      default:
        replicas: 1
