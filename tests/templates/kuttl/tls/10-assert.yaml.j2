---
apiVersion: kuttl.dev/v1beta1
kind: TestAssert
commands:
{% if test_scenario['values']['use-tls'] == 'true' %}
  - script: kubectl exec -n $NAMESPACE druid-checks-0 -- /tmp/check-tls.sh $NAMESPACE https
    timeout: 300
{% else  %}
  - script: kubectl exec -n $NAMESPACE druid-checks-0 -- /tmp/check-tls.sh $NAMESPACE http
    timeout: 300
{% endif %}